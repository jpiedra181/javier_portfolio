---                               
import '../styles/global.css'  
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

const { title } = Astro.props
--- 

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-TQ8X7HBE95"></script>
		<script>
			setTimeout(() => {
				window.dataLayer = window.dataLayer || [];
				function gtag(){dataLayer.push(arguments);}
				gtag('js', new Date());

				gtag('config', 'G-TQ8X7HBE95');
			}, 0)
		</script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image" href="favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- GOOGLE FONTS -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Ovo&display=swap" rel="stylesheet">
		
		<!-- JavaScript -->
		<script src="scripts/buttonTop.js" defer></script>
	</head>
	<body class="m-0 px-8 md:px-14 xl:px-32 w-full flex flex-col relative">
		<Header />
		<slot />
		<button id="scrollToTop" class="hidden fixed top-[80%] right-16 p-4 bg-white text-black font-semibold rounded-lg shadow-md cursor-pointer">â†‘ TOP</button>
		<Footer />
	</body>
</html>

<style>
	body {
		font-family: 'Outfit', sans-serif;
		/* font-family: "Ovo", serif; */
		background: linear-gradient(45deg, #050749, #010120);
		color: white;
	}
</style>
